<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro - MedPortal</title>
    <link rel="stylesheet" href="./../css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <h1>MedPortal - Cadastro</h1>
        <nav>
            <ul>
                <li><a href="/index">Início</a></li>
                <li><a href="/login">Login</a></li>
                <li><a href="/cadastroMedico">Cadastro Profissional da Saúde</a></li>
            </ul>
        </nav>
    </header>
    <main id="register-page">
        <section id="register" class="section">
            <h2>Crie sua conta no MedPortal</h2>
            <form id="register-form" action="/cadastro" method="POST">
                <!-- Nome Completo -->
                <div class="form-group">
                    <label for="name">Nome Completo:</label>
                    <input type="text" id="name" name="name" required placeholder="Digite seu nome completo" aria-label="Nome completo">
                </div>
                
                <!-- E-mail -->
                <div class="form-group">
                    <label for="email">E-mail:</label>
                    <input type="email" id="email" name="email" required placeholder="Digite seu e-mail" aria-label="E-mail">
                </div>
            
                <!-- Telefone -->
                <div class="form-group">
                    <label for="phone">Telefone:</label>
                    <input type="tel" id="phone" name="phone" required placeholder="(00) 00000-0000" aria-label="Telefone">
                </div>
                
                <!-- Senha -->
                <div class="form-group">
                    <label for="password">Senha:</label>
                    <input type="password" id="password" name="password" required placeholder="Crie uma senha" aria-label="Senha">
                </div>
            
                <div class="form-group">
                    <label for="confirm-password">Confirme sua Senha:</label>
                    <input type="password" id="confirm-password" name="confirm-password" required placeholder="Confirme sua senha" aria-label="Confirmação de senha">
                </div>
                
                <!-- CPF -->
                <div class="form-group">
                    <label for="cpf">CPF:</label>
                    <input type="text" id="cpf" name="cpf" required placeholder="Digite seu CPF" aria-label="CPF">
                </div>
            
                <!-- Botão de Cadastro -->
                <button type="submit" class="btn-submit">Registrar</button>
            </form>
            
            
            <p class="has-account">
                Já tem uma conta? <a href="/login">Faça login aqui</a>.
            </p>
        </section>
    </main>

    <footer>
        <p>MedPortal &copy; 2024. Todos os direitos reservados.</p>
    </footer>

    <script>
        document.getElementById("register-form").addEventListener("submit", function(event) {
            var password = document.getElementById("password").value;
            var confirmPassword = document.getElementById("confirm-password").value;
            
            if (password !== confirmPassword) {
                alert("As senhas não coincidem. Por favor, verifique e tente novamente.");
                event.preventDefault(); 
            }
        });
    </script>
</body>
</html>